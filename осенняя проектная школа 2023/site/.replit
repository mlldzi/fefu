language="csharp"
run="cd BlazorApp/ && dotnet run"

[env]
DOTNET_NOLOGO = "1"
DOTNET_CLI_TELEMETRY_OPTOUT = "1"

[packager]
language = "dotnet"

[packager.features]
packageSearch = true

[nix]
channel = "stable-21_11"

[languages.csharp]
pattern = "**/{*.cs,*.razor}"

  [languages.csharp.languageServer]
  start = ["omnisharp", "--languageserver"]

[[ports]]
localPort = 5000
externalPort = 80
